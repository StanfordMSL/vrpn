<launch>

  <arg name="robot_ns" default="robot" /> <!--namespace of asset -->
  <arg name="asset" default="robot"/> <!-- name of vrpn asset -->
  <arg name="server" default="mocap.local"/>

  <node  ns="$(arg robot_ns)" pkg="vrpn_client_ros" type="vrpn_tracker_node" name="vrpn_tracker_node" output="screen">
    <param name="tracker_name" value="$(arg asset)"/> <!-- vrpn server on local network  -->
    <param name="server" value="$(arg server)"/> <!-- vrpn server on local network  -->
    <param name="port" value="3883"/> <!-- should be 3883 -->
    <param name="update_frequency" value="100"/> <!-- the publish rate  -->
    <param name="use_server_time" value="false"/> <!-- set false for local robot clock stamp  -->
    <param name="broadcast_tf" value="world"/> <!-- enable tf-->
    <param name="frame_id" value="world"/> <!-- base link for tf -->
  </node>

</launch>
